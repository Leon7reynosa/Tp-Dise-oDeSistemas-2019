               <div class="contenedor_sugerencia" style="text-align: center; display: flex; justify-content: center;">
                    

                    <div class="contenedor_imagen" id="div_active_superior"  data-toggle="tooltip" data-placement="top" title="{{this.prendaActiveSuperior.tipo.nombrePrenda}}" style="background-color: {{this.colorActiveSuperior}}">
                          <img class="d-block w-100" src="{{this.prendaActiveSuperior.tipo.imagen}}" alt="First slide">
                    
                    </div>

