            <div class="carousel-item active" >
            
               <div class="contenedor_sugerencia" style="text-align: center; display: flex; justify-content: center;">
                    

                    <div class="contenedor_imagen" id="div_active_superior"  data-toggle="tooltip" data-placement="top" title="{{sugerenciaPrincipal.prendaActiveSuperior.tipo.nombrePrenda}}" style="background-color: {{sugerenciaPrincipal.colorActiveSuperior}}">
