                    </div>
                    <br>
                    <h5> {{#if sugerenciaPrincipal.eventoSugerencia}} {{descripcionEvento}} {{else}} No tiene evento {{/if}}</h5>
                    <p>{{#if sugerenciaPrincipal.frecuencia.fechaDelEvento}} {{descripcionEvento}} {{/if}}</p>
                    {{#if sugerenciaPrincipal.calificacion }}
                      <p>YA CALIFICADA!</p>
                    {{else}}
                    <button class="boton_calificar" data-toggle="modal" data-target="#exampleModalScrollable{{sugerenciaPrincipal.id}}">Calificar</button>
                    {{/if}}
            </div>
            </div>


  

            {{#each sugerenciasAceptadas}}
