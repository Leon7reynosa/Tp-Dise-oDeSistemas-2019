<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		 <link rel="stylesheet" href="/css/sugerencia_quemepongo.css">
		<script src="https://kit.fontawesome.com/45c2e77de6.js"></script>
		<title>Listado de guardarropas por usuario"</title>
		
	</head>
	<body >

		<div class="circle">
			<img src="/img/logoQueMePongo.png" class="imagen_circulo">
		</div>	

		<div class="rectangulo_abajo"></div>


		<div class="contenedor_general">

			<div class="contenedor_sugerencias">
				

				{{#each sugerencia.atuendo.conjuntoPrendas}}

				<div class="contenedor_prenda">

					<img src="{{this.imagen_url}}" class="imagen_prenda">

					<div class="contenedor_info">
							
						<label>Tipo Prenda:    <i style="color: #FF9C60">{{this.tipo.nombre}}</i></label>
						
						<br>
						<label>Tipo Tela:    <i style="color: #FF9C60">{{this.tela}}</i></label>	
				
						<br>
						<label>Tipo Material:    <i style="color: #FF9C60">{{this.material}}</i></label>	
					
						<br>			
						<div class="contenedor_colores">
							
							<label>Colores: </label>
							<div class="color_mostrar" style="background-color: red"></div>
							<div class="color_mostrar" style="background-color:red"></div>

						</div>						
						
					</div>
					
				</div>

				{{/each}}



				<div class="contenedor_botones">

					<a href="google.com"><img src="/img/volver.png" class="imagen_acciones"></a>
					<a href="google.com"><img src="/img/cruz.png" class="imagen_acciones"></a>
					<a href="google.com"><img src="/img/check.png" class="imagen_acciones"></a>


				</div>

			</div>


			


		</div>




	</body>
</html>